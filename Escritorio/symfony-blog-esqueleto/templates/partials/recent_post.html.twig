<div class="new new1">
    <hr>
    {% for recent in recents|slice(0, 2) %}
        <a href="{{ path('single_post', {'slug': recent.slug}) }}">{{ recent.title }}</a>
        <h5> By <span>{{ recent.user.name }}</span></h5>
        <img class="img-responsive" src="{{ asset('images/blog/' ~ recent.image) }}" alt="{{ recent.title }}">
        <p>{{ recent.publishedAt | date('d F') }}</p>
        <p><i class="fa fa-clock-o sr-icons"></i> 
            {{ recent.publishedAt | date('h A') }}
        </p>
        <hr>
    {% endfor %}
</div>